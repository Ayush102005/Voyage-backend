        # Generate bus links
        if "bus" in categories_to_generate:
            try:
                journey_date = (datetime.now() + timedelta(days=30)).strftime("%Y-%m-%d")
                
                bus_links = generator.generate_bus_links(
                    trip_details.origin_city,
                    trip_details.destination,
